# Server configuration
PORT=3000
MONGODB_URI=mongodb://localhost:27017/sampleTaskManager

# JWT authentication
ACCESS_TOKEN_SECRET=your_access_token_secret
ACCESS_TOKEN_EXPIRY=2m
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=1d

# Email configuration (use Mailtrap for safe testing)
MAILTRAP_SMTP_HOST=sandbox.smtp.mailtrap.io
MAILTRAP_SMTP_PORT=2525
MAILTRAP_SMTP_USER=your_mailtrap_user
MAILTRAP_SMTP_PASS=your_mailtrap_pass
MAIL_FROM=noreply@taskmanager.com

# Cloudinary configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS configuration (set to your frontend domain in production)
CORS_ORIGIN=

# Fill in all values for local development. Never commit your real secrets to version control.
